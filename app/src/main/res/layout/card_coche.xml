<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5sp"
    card_view:cardCornerRadius="5sp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
            >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            android:src="@mipmap/ic_launcher_round"
            android:id="@+id/imagenCoche"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/txtMarca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="28dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@+id/imagenCoche"
            android:layout_toRightOf="@+id/imagenCoche"
            android:text="TextView" />

        <TextView
            android:id="@+id/txtModelo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="64dp"
            android:layout_marginLeft="64dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@+id/txtMarca"
            android:layout_toRightOf="@+id/txtMarca"
            android:text="TextView" />

        <Button
            android:id="@+id/btnInformacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtMarca"
            android:layout_marginStart="28dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="21dp"
            android:layout_toEndOf="@+id/imagenCoche"
            android:layout_toRightOf="@+id/imagenCoche"
            android:text="InformaciÃ³n" />

        <Button
            android:id="@+id/btnComprar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtModelo"
            android:layout_marginStart="17dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="21dp"
            android:layout_toEndOf="@+id/btnInformacion"
            android:layout_toRightOf="@+id/btnInformacion"
            android:text="Comprar" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>